<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="onClick"></com.baidu.mapapi.map.MapView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="bottom"
        android:background="@color/colorGreyBlue">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_weight="0.45">

            <Button
                android:id="@+id/bt_start"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="开启" />

            <Button
                android:id="@+id/bt_pause"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/bt_start"
                android:layout_toEndOf="@+id/bt_start"
                android:onClick="onClick"
                android:text="停止" />

            <Button
                android:id="@+id/bt_location_draw"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_pause"
                android:onClick="onClick"
                android:textAllCaps="false"
                android:text="loc\nDraw" />

            <Button
                android:id="@+id/bt_trace_draw"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/bt_location_draw"
                android:layout_toEndOf="@+id/bt_location_draw"
                android:textAllCaps="false"
                android:onClick="onClick"
                android:text="trace\nDraw" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="实时坐标数据" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/colorWhite"
                android:textColor="@color/colorWineRed" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>